{
  "rules": {
    "persons": {
      "data": {
        ".read": "auth.token.admin === true",
        ".write": "auth.token.admin === true",
        "en": {
          "contributions": {
            ".read": "auth.token.admin === true",
            ".write": "auth.token.admin === true",
            "$user_id": {
              "$uid": {
                ".indexOn": "contributedAt",
                "publish": {
                  ".write": "auth.token.admin === true",
                  ".read": "auth.uid === $user_id || auth.token.admin === true"
                }
              },
              ".write": "(auth.uid === $user_id && auth.token.email_verified === true) || auth.token.admin === true",
              ".read": "auth.uid === $user_id || auth.token.admin === true"
            }
          },
          "images": {
            ".read": true,
            ".write": "auth.token.admin === true",
            ".indexOn": "isGallery"
          }
        },
        "cn": {
          "contributions": {
            ".read": "auth.token.admin === true",
            ".write": "auth.token.admin === true",
            "$user_id": {
              "$uid": {
                ".indexOn": "contributedAt",
                "publish": {
                  ".write": "auth.token.admin === true",
                  ".read": "auth.uid === $user_id || auth.token.admin === true"
                }
              },
              ".write": "(auth.uid === $user_id && auth.token.email_verified === true) || auth.token.admin === true",
              ".read": "auth.uid === $user_id || auth.token.admin === true"
            }
          },
          "images": {
            ".read": true,
            ".write": "auth.token.admin === true",
            ".indexOn": "isGallery"
          }
        }
      },
      "publics": {
        ".read": true,
        ".write": "auth.token.admin === true"
      },
      "requestArchieve": {
        ".read": "auth.token.admin === true",
        ".write": "auth.token.admin === true",
        "contributions": {
          ".read": "auth.token.admin === true",
          ".write": "auth.token.admin === true",
          "$user_id": {
            "$uid": {
              ".indexOn": "contributedAt",
              "publish": {
                ".write": "auth.token.admin === true",
                ".read": "auth.uid === $user_id || auth.token.admin === true"
              }
            },
            ".write": "(auth.uid === $user_id && auth.token.email_verified === true) || auth.token.admin === true",
            ".read": "auth.uid === $user_id || auth.token.admin === true"
          }
        },
        "persons": {
          ".read": true
        },
        "images": {
          ".read": true
        }
      }
    },
    "announcement": {
      ".read": "auth.token.admin === true",
      ".write": "auth.token.admin === true",
      "announce": {
        ".read": true,
        ".write": "auth.token.admin === true"
      }
    }
  }
}
